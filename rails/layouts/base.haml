!!!
%html
  %head
    %meta(http-equiv="Content-Type" content="text/html; charset=UTF-8")
    = favicon_link_tag 'favicon.png'
    %title
      = yield :title
    = yield :stylesheets
    = yield :head

  - if content_for?(:body_tag)
    = yield :body_tag
  - else
    %body
  = yield :body
  = yield :javascript
  = yield :extra
  %script{ :type => "text/javascript" }
    = render :partial => "layouts/converge-ui/common_i18n"
